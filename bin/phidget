#!/usr/bin/env ruby

require 'phidgets'

begin
  manager = Phidgets::Manager.new
  manager.on_attach do |phid, serial, hub_port, index, ch_name|
    str = "| #{serial}"
    str += ' ' * (18 - str.length)
    str += "| #{ch_name}"
    str += ' ' * (57 - str.length)
    str += "| #{hub_port}"
    str += ' ' * (66 - str.length)
    str += "| #{index}"
    str += ' ' * (75 - str.length) + '|'
    $stdout.puts str
  end
  $stdout.puts "\n----------------------------------------------------------------------------"
  $stdout.puts "| SerialNumber    | Class                                | Hub    | Index  |"
  $stdout.puts "----------------------------------------------------------------------------"
  manager.open
  sleep 0.5
  $stdout.puts "----------------------------------------------------------------------------\n"
  manager.close
  
rescue SystemExit
rescue Exception => e
  $stdout.puts "#{e}\n#{e.backtrace.join("\n")}\n"
end

